        <!-- Start content -->

        <div class="content">
            <div class="container-fluid">
                <div class="about-section-box">
                    <div class="container">
                        <div class="row">

                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <br>
                                <center>
                                <h1>Formations List</h1>

                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Description</th>
                                        <th>Mode</th>
                                        <th>Duration</th>
                                        <th>Starting date</th>
                                        <th>Ending date</th>
                                        <th>Price</th>
                                        <th>Show</th>
                                        <th>Edit</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for formation in formations %}
                                        <tr>
                                            <td>{{ formation.id }}</td>
                                            <td>{{ formation.description }}</td>
                                            <td>{{ formation.mode }}</td>
                                            <td>{{ formation.duree }}</td>
                                            <td>{{ formation.dateDebut ? formation.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ formation.dateFin ? formation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ formation.price }}</td>
                                            <td>
                                                <a href="{{ path('formation_show', {'id': formation.id}) }}">show</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a>
                                            </td>

                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
    </center>

                                <a href="{{ path('formation_new') }}">Create new</a>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 text-center">
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>




{% endblock %}